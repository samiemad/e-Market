<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:gravity="bottom"
    android:weightSum="10"
    tools:context="com.scit.samiemad.emart.ui.SplashActivity" >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <ImageView
        android:id="@+id/imageSplashE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:src="@drawable/splash_e" />

    <ImageView
        android:id="@+id/imageSplashDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:src="@drawable/splash_dash" />

    <ImageView
        android:id="@+id/imageSplashMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:src="@drawable/splash_market" />

</LinearLayout>