<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.scit.samiemad.emart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:onClick="clickSelectMall"
    android:orientation="horizontal"
    android:tag="@string/title_market4" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:text="@string/title_market4"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/desc_market4" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMarketShowOnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickShowOnMap"
        android:src="@drawable/ic_place_black_24dp"
        android:tag="@string/title_market4"
        app:elevation="8dp" />

</LinearLayout>